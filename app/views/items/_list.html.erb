<% if items.any? %>
<table class="table">
  <tr>
    <th></th>
    <th>name</th>
    <th>created at</th>
    <th>updated at</th>
  </tr>
  <% items.each do |item| %>
    <tr>
      <td>
        <%= link_to("/items/#{item.id}/download") do %>
          <span class="download"><%= image_tag "ios7-download-outline.png" %></span>
        <% end %>
      </td>
      <td><%= link_to item.relative_path, item %></td>
      <td><%= item.created_at.to_s %></td>
      <td><%= item.updated_at.to_s %></td>
    </tr>
  <% end %>  
</table>
<% else %>
  not found
<% end %>
