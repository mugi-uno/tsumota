<h4><%= @setting.root_path %></h4>
<h1><%= @item.relative_path %></h1>

<%= form_for @item, html: {class: 'item_form'} do |f| %>
  <div class="form-group">
    <%= f.label :description, 'メモ', class: "control-label" %>
    <%= f.text_area :description, rows: 5, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :tags, 'タグ', class: "control-label" %>
    <%= f.text_field :tags, value: @item.tags_csv, class: 'form-control', data: { role: "tagsinput" } %>
  </div>

  <div class="form-group">
    <div class="col-xs-2 col-xs-offset-5">
      <%= f.submit '更新', class: 'btn btn-primary form-control' %>
    </div>
  </div>
<% end %>
